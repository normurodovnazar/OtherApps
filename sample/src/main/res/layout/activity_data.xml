<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataActivity">
    <TextView
        android:id="@+id/tiData"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="20sp"
        android:text="Play the edge of the circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/callMeasure"
        android:layout_marginVertical="20sp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiData"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/data"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="15sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/callMeasure"
        android:text="By default, you automatically pick up weapons and items in the mobile version of the game. When you find compatible gun attachments, it snaps those to your weapons cache for you. It’s a really helpful feature that eliminates hassle, especially early on in a game when you’re scrambling for supplies.
However, make sure to keep moving when you’re picking things up or managing your backpack as staying put can get you shot!
"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>