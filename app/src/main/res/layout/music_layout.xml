<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="5dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/orderMusic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="16"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/icMusic"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/orderMusic"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_music"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/musicTitle"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/icMusic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/album"
        app:layout_constraintEnd_toStartOf="@id/duration"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/album"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/icMusic"
        app:layout_constraintTop_toBottomOf="@id/musicTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/duration"
        android:paddingHorizontal="10dp"
        android:textStyle="italic"
        android:textSize="13sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/duration"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/musicTitle"
        android:layout_marginHorizontal="5dp"
        android:text="14:28"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/remove"
        android:src="@drawable/ic_remove"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_ic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>