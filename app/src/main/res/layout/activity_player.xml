<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.PlayerActivity">

    <TextView
        android:id="@+id/title"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editSongInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/editSongInfo"
        android:src="@drawable/ic_edit"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/album"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

    <TextView
        android:id="@+id/artist"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toStartOf="@id/editSongInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/album"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toBottomOf="@id/artist"
        app:layout_constraintEnd_toStartOf="@id/editSongInfo"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginVertical="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/autoPlayWhenCloseToEar"
        android:text="@string/autoPlayWhenCloseToEar"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textStyle="italic"
        android:layout_marginHorizontal="5dp"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/album"/>
    <CheckBox
        android:id="@+id/autoPauseWhenFarFromEar"
        android:text="@string/autoPauseWhenFarFromEar"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textStyle="italic"
        android:layout_marginHorizontal="5dp"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/autoPlayWhenCloseToEar"/>
    <CheckBox
        android:text="@string/autoPlayWhenClickMusic"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textStyle="italic"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/autoPauseWhenFarFromEar"/>

    <ImageView
        android:id="@+id/replay_10"
        android:src="@drawable/ic_replay_10"
        android:background="@drawable/bg_ic"
        app:layout_constraintBottom_toTopOf="@id/progress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <ImageView
        android:src="@drawable/ic_restart"
        android:background="@drawable/bg_ic"
        app:layout_constraintBottom_toTopOf="@id/progress"
        app:layout_constraintStart_toEndOf="@id/replay_10"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <ImageView
        android:src="@drawable/ic_playlist_add"
        android:padding="6dp"
        android:background="@drawable/bg_ic"
        app:layout_constraintBottom_toTopOf="@id/progress"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/progress"
        android:text="~~:~~/~~:~~"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/shuffle"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_ic"
        android:padding="5dp"
        android:src="@drawable/ic_shuffle_off"
        android:layout_margin="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:clickable="true"
        android:focusable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ic"
        android:padding="5dp"
        android:src="@drawable/ic_prev"
        android:layout_marginHorizontal="10sp"
        app:layout_constraintBottom_toBottomOf="@id/shuffle"
       app:layout_constraintEnd_toStartOf="@id/play" />
    <ImageView
        android:id="@+id/play"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ic"
        android:padding="5dp"
        android:src="@drawable/ic_play"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintBottom_toBottomOf="@id/shuffle"
        app:layout_constraintEnd_toStartOf="@id/repeat"
        app:layout_constraintStart_toEndOf="@id/shuffle" />
    <ImageView
        android:clickable="true"
        android:focusable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_ic"
        android:padding="5dp"
        android:src="@drawable/ic_next"
        android:layout_marginHorizontal="10sp"
        app:layout_constraintBottom_toBottomOf="@id/shuffle"
        app:layout_constraintStart_toEndOf="@id/play" />
    <ImageView
        android:id="@+id/repeat"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_ic"
        android:padding="5dp"
        android:src="@drawable/ic_repeat_off"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintBottom_toBottomOf="@id/shuffle"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>